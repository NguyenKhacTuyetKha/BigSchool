@model IEnumerable<BigSchool.Models.Course>
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Course/Create.cshtml";
}

<h2>Edit</h2>
<u class="course">
    @foreach (var course in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @course.DateTime.ToString("MM")
                </div>
                <div class="day">
                    @course.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="lecturer">
                    @course.Lecturer.Name
                </span>
                <span class="category">
                    @course.Category.Name
                </span>
            </div>
            <div class="action">
                <a href="@Url.Action("Edit","Courses", new { id = course.Id})">Edit</a>
                <a href="">Detele</a>
            </div>
        </li>
    }
</u>
